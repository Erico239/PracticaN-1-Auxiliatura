class Perro:
    def __init__(self, nombre, edad, raza):
        self.nombre = nombre
        self.edad = edad
        self.raza = raza
    
    def hacer_sonido(self):
        return "¡Guau!"
    
    def moverse(self):
        return "Corriendo en el parque"

class Gato:
    def __init__(self, nombre, color):
        self.nombre = nombre
        self.color = color
    
    def hacer_sonido(self):
        return "¡Miau!"
    
    def moverse(self):
        return "Saltando al mueble"

class Pajaro:
    def __init__(self, nombre, tipo):
        self.nombre = nombre
        self.tipo = tipo
    
    def hacer_sonido(self):
        return "¡Pío!"
    
    def moverse(self):
        return "Volando en círculos"

mi_perro = Perro("Firulais", 3, "Labrador")
mi_gato = Gato("Mishi", "Negro")
mi_pajaro = Pajaro("Piolín", "Canario")

animales = [mi_perro, mi_gato, mi_pajaro]

for animal in animales:
    print(f"\n{animal.nombre}:")
    print(f"Sonido: {animal.hacer_sonido()}")
    print(f"Movimiento: {animal.moverse()}")
